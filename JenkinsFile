pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'golang:1.24.1'
                    reuseNode true
                    args '-u root' 
                }
            }
            steps {
                echo 'Building Go binary...'
                sh '''
                    go version
                    go mod tidy
                    go build -o bin/todo-app main.go
                '''
            }
        }
    }
}
