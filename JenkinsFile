pipeline {
    agent {
        docker {
            image 'golang:1.24.1'
        }
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building Go binary...'
                sh '''
                    go version
                    go mod tidy
                    go build -o bin/todo-app main.go
                '''
            }
        }
    }
}
