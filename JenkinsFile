pipeline {
    agent {
        docker {
            image 'golang:1.24.1'
            args '-u root'
        }
    }

    environment {
        HOME = '/go'
        GO111MODULE = 'on'
    }

    stages {
        stage('Test') {
            steps {
                echo 'Running unit tests...'
                sh '''
                    go mod tidy
                    go test -v -cover ./...
                '''
            }
        }
        stage('Build') {
            steps {
                echo 'Building Go binary...'
                sh 'go build -o bin/todo-app main.go'
            }
        }
    }
}


